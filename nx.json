{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default"],
    "sharedGlobals": []
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    }
  ],
  "generators": {
    "@nx/react": {
      "library": {
        "style": "none",
        "linter": "none",
        "unitTestRunner": "none"
      },
      "application": {
        "babel": true,
        "style": "none",
        "linter": "none",
        "bundler": "rspack"
      },
      "component": {
        "style": "none"
      }
    }
  }
}
